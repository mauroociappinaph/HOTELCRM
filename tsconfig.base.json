{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": false,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@hotel-crm/shared": ["packages/shared/src/index.ts"],
      "@hotel-crm/shared/*": ["packages/shared/src/*"]
    }
  }
}
